<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.adamm.gamepad.EditPatientInfo"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/progressiveGenderButton"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:onClick="progressivelyEditGender"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toEndOf="@+id/time_textView"
        app:layout_constraintTop_toBottomOf="@+id/editDOBButton" />

    <Button
        android:id="@+id/editDOBButton"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:onClick="editDOB"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toEndOf="@+id/weight_textView"
        app:layout_constraintTop_toBottomOf="@+id/editNameButton" />

    <Button
        android:id="@+id/editNameButton"
        android:layout_width="64dp"
        android:layout_height="51dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="editName"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toEndOf="@+id/distance_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveEditedButton"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="goto_editPatient"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="463dp" />

    <TextView
        android:id="@+id/name_editView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="28dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dob_editView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="DOB"
        app:layout_constraintTop_toBottomOf="@+id/distance_textView"
        tools:layout_editor_absoluteX="96dp" />

    <TextView
        android:id="@+id/gender_editView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:text="Gender"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="119dp" />


</android.support.constraint.ConstraintLayout>
